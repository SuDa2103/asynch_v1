<div class="container">
    <br>
    <% @posts.each do |post| %>
        <h1> <%= post.title %> </h1>
        <br>
        <p> <%= post.content %> </p>
        <br>
        <%= link_to  "View full Post", post_path(post) %>
    <% end %>
    <br>
    <%= link_to  "Create a New Decision", new_post_path %>
</div>