<div class="container">
  <%= simple_form_for(@post) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, :rows => 10, :cols => 120 %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>